<div class="container"> 
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1 id="forms"><center>Lista De Problemas</center></h1>
      </div>
    </div>
  </div>

  <div class="col-lg-11 col-lg-offset-1">
    <table class="table">
      <thead>
        <tr>

          <th>Termostato</th>
          <th>Asunto</th>
          <th>Descripción del Problema</th>
          <th>Estado</th>
          <th>Resolución</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @issues.each do |issue| %>
          <% if issue.state != "CANCELADO"%>
          <tr>
            <td><%= issue.thermostat_id %></td>
            <td><%= issue.title %></td>
            <td><%= issue.description %></td>
            <td><%= issue.state %></td>
            <td><%= issue.resolution %></td>
            <td><%= link_to 'Show', issue %></td>
            <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
            <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <%end%>
        <% end %>
      </tbody>
    </table>

    <br>

    <%#= link_to 'New Issue', new_issue_path %>
  </div>
</div>

<div class="container"> 
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1 id="forms"><center>Enviar datos de Temperatura</center></h1>
      </div>
    </div>
  </div>

  <div class="col-lg-6 col-lg-offset-3">
	<%= form_tag("/alerts/check_temperature", method: "post") do %>
	  <fieldset>
	    <input type="HIDDEN" name="thermostat_id" value="<%= @thermostat_id %>">
		<div class="form-group">
		  <label class="control-label">Temperatura: </label>
		  <input type="number" class="form-control" name="temperatura">
		</div>
		<div class="form-group">
	      <div class="col-lg-10 col-lg-offset-2">
	        <button class="btn btn-default">Cancel</button>
	        <button type="submit" class="btn btn-primary">Submit</button>
	      </div>
	    </div>
	  </fieldset>
	<% end %>
  </div>
</div>